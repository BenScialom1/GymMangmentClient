<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymMangmentClient.Views.Register"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:GymMangmentClient.ViewModels"
    Title="הרשמה"
    x:DataType="viewmodel:RegisterPageViewModel">
    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!--  Title Section  -->
            <Label
                FontAttributes="Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="Create Account"
                TextColor="Black" />

            <!--  Email Field  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="Email" />
                <Label
                    Grid.Column="1"
                    IsVisible="{Binding ShowEmailError}"
                    Text="{Binding EmailError}"
                    TextColor="Red" />
            </Grid>
            <Entry Placeholder="Type Email" Text="{Binding Email}" />

            <!--  Username Field  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="User Name" />
                <Label
                    Grid.Column="1"
                    IsVisible="{Binding ShowNameError}"
                    Text="{Binding NameError}"
                    TextColor="Red" />
            </Grid>
            <Entry Placeholder="Type First Name" Text="{Binding Name}" />
            <Label Text="Password" />

            <!--  Password Field  -->
            <Label
                IsVisible="{Binding ShowPasswordError}"
                Text="{Binding PasswordError}"
                TextColor="Red" />
            <Entry
                x:Name="PasswordEntry"
                Margin="0,10"
                BackgroundColor="#F0F0F0"
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding Password}"
                TextColor="Black" />
            <Label Text="Birthday" />

            <!--  Birthday Picker  -->
            <DatePicker
                x:Name="BirthdayPicker"
                Margin="0,10"
                BackgroundColor="#F0F0F0"
                Date="{Binding DateOfBirth}"
                MaximumDate="{Binding MinDate}"
                MinimumDate="1930-01-01" />

            <!--  Address Field  -->
            <Editor
                x:Name="AddressEditor"
                Margin="0,10"
                BackgroundColor="#F0F0F0"
                HeightRequest="100"
                Placeholder="Enter Address"
                Text="{Binding Address}"
                TextColor="Black" />

            <!--  Difficulty Dropdown  -->
            <Picker
                x:Name="DifficultyPicker"
                Title="Select Difficulty"
                Margin="0,10"
                BackgroundColor="#F0F0F0"
                SelectedItem="{Binding Difficulty}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Beginner</x:String>
                        <x:String>Intermediate</x:String>
                        <x:String>Expert</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!--  Gender Selection  -->
            <StackLayout
                HorizontalOptions="Center"
                Orientation="Horizontal"
                RadioButtonGroup.GroupName="Gender"
                RadioButtonGroup.SelectedValue="{Binding Gender}"
                Spacing="20">
                <RadioButton
                    BackgroundColor="Transparent"
                    Content="Male"
                    GroupName="Gender"
                    TextColor="Black"
                    Value="1" />
                <RadioButton
                    BackgroundColor="Transparent"
                    Content="Female"
                    GroupName="Gender"
                    TextColor="Black"
                    Value="2" />
                <RadioButton
                    BackgroundColor="Transparent"
                    Content="Other"
                    GroupName="Gender"
                    TextColor="Black"
                    Value="3" />
            </StackLayout>

            <!--  Submit Button  -->
            <Button
                Margin="0,20"
                BackgroundColor="CadetBlue"
                Command="{Binding RegisterCommand}"
                CornerRadius="20"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand"
                IsEnabled="{Binding NotInServerCall}"
                Text="Register"
                TextColor="White"
                VerticalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>